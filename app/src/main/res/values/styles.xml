<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyHobbies.TextFields" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/mh_outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/mh_onSurfaceVariant</item>
        <item name="android:textColor">@color/mh_onSurface</item>
        <item name="colorControlActivated">@color/mh_primary</item>
    </style>

    <style name="Theme.MyHobbies.ButtonPrimary" parent="Widget.Material3.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/mh_primary</item>
        <item name="android:textColor">@color/mh_onPrimary</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="EditText.WithIconPadding">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="Shape.Rounded16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Shape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
