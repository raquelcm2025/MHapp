<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
    android:id="@+id/scrollCuenta"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:clipToPadding="false"
    android:paddingBottom="72dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/bottomNav">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivFotoPerfil"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:contentDescription="Foto de perfil"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                app:strokeColor="@color/gris"
                app:strokeWidth="1dp"
                android:tint="@color/magenta_claro"
                app:contentPadding="0dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:inputType="textCapWords"/>

                <EditText
                    android:id="@+id/etApellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellidos"
                    android:layout_marginTop="6dp"
                    android:inputType="textCapWords"/>

                <!-- Fecha opcional -->
                <EditText
                    android:id="@+id/etFechaNac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de nacimiento (opcional)"
                    android:layout_marginTop="6dp"
                    android:inputType="date"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Contacto -->
        <EditText
            android:id="@+id/etCelular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Celular"
            android:inputType="phone"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnListaHobbies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agregar Hobbies"/>

            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cerrar sesión"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Sección de fotos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis fotos"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <!-- Grid simple de 3 columnas -->
        <GridLayout
            android:id="@+id/gridFotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginTop="8dp">

            <!-- Tile para agregar foto -->
            <FrameLayout
                android:id="@+id/tileAgregar"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_input_add"
                    android:contentDescription="Agregar foto"/>
            </FrameLayout>

            <!-- Ejemplo de foto 1 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                >

                <ImageView
                    android:id="@+id/ivFoto1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/hobby_ajedrez"
                    android:contentDescription="Foto hobby"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical"
                    android:padding="4dp"
                    android:background="#66000000">


                </LinearLayout>
            </FrameLayout>

            <!-- Ejemplo de foto 2 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1">

                <ImageView
                    android:id="@+id/ivFoto2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/hobby_guitarra"
                    android:contentDescription="Foto hobby"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical"
                    android:padding="4dp"
                    android:background="#66000000">

                </LinearLayout>
            </FrameLayout>

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toca una foto para agregar una descripción"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#F7F7F7"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:menu="@menu/menu_main"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
