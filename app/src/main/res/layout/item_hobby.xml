<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvHobbyNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Hobby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDel"
        android:textColor="@color/magenta"/>

    <TextView
        android:id="@+id/tvHobbyNota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comentario"
        app:layout_constraintStart_toStartOf="@id/tvHobbyNombre"
        app:layout_constraintTop_toBottomOf="@id/tvHobbyNombre"
        app:layout_constraintEnd_toStartOf="@id/btnDel"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tvHobbyFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-10-15 12:00"
        app:layout_constraintStart_toStartOf="@id/tvHobbyNombre"
        app:layout_constraintTop_toBottomOf="@id/tvHobbyNota"
        android:textColor="@android:color/darker_gray"/>

    <ImageButton
        android:id="@+id/btnDel"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
