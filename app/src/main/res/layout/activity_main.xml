<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/llDashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#F7F7F7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivLogoDashboard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerInside"
            android:contentDescription="Logo MyHobbiesApp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvTituloDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyHobbiesApp"
            android:textSize="28sp"
            android:textColor="@color/magenta_claro"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- NAV BAR FIJO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#F7F7F7"
        app:menu="@menu/menu_main"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:itemIconSize="22dp"
        app:itemTextAppearanceActive="@style/BottomNavText"
        app:itemTextAppearanceInactive="@style/BottomNavText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CONTENIDO SCROLL -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="72dp"
        app:layout_constraintTop_toBottomOf="@id/llDashboard"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Banner -->
            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_hobbies"
                android:contentDescription="Banner MyHobbiesApp"/>

            <!-- Sección 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hobbies más populares"
                android:fontFamily="@font/poppins"
                android:textColor="@color/magenta_claro"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:id="@+id/rowPopulares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card A -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/card_bg">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/hobby_ceramica"
                            android:contentDescription="Cerámica"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cerámica"
                            android:fontFamily="@font/poppins_thin"
                            android:textColor="@color/magenta_oscuro"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:paddingTop="6dp"/>
                    </LinearLayout>

                    <!-- Card B -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/card_bg">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/hobby_fotografia"
                            android:contentDescription="Fotografía"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fotografía"
                            android:fontFamily="@font/poppins_thin"
                            android:textColor="@color/magenta_oscuro"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:paddingTop="6dp"/>
                    </LinearLayout>

                    <!-- Card C -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/card_bg">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/hobby_cocina"
                            android:contentDescription="Cocina creativa"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cocina"
                            android:fontFamily="@font/poppins_thin"
                            android:textColor="@color/magenta_oscuro"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:paddingTop="6dp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Sección 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevos hobbies por explorar"
                android:fontFamily="@font/poppins"
                android:textColor="@color/magenta_claro"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="6dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:id="@+id/rowExplorar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 1 -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/card_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:contentDescription="Yoga"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/hobby_yoga" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:paddingTop="6dp"
                            android:text="Yoga"
                            android:textAlignment="center"
                            android:textColor="@color/magenta_oscuro"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Card 2 -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/card_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:contentDescription="Guitarra"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/hobby_guitarra" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:paddingTop="6dp"
                            android:text="Guitarra"
                            android:textAlignment="center"
                            android:textColor="@color/magenta_oscuro"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Card 3 -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/card_bg"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:contentDescription="Ajedrez"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/hobby_ajedrez" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:paddingTop="6dp"
                            android:text="Ajedrez"
                            android:textAlignment="center"
                            android:textColor="@color/magenta_oscuro"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
