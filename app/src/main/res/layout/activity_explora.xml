<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploraActivity">

    <!-- CONTENIDO -->
    <ScrollView
        android:id="@+id/scrollExplora"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipToPadding="false"
        android:paddingBottom="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explora"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/magenta_oscuro"
                android:paddingBottom="8dp"/>

            <!-- Tarjeta de perfil simple -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Encabezado: foto + nombres + distancia -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivFoto"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@mipmap/cuenta"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            app:strokeColor="@color/gris"
                            app:strokeWidth="1dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvNombre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alexandra Gomez"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvDistancia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A 1.2 km de ti"
                                android:textSize="13sp"
                                android:textColor="@color/gris_azulado"/>
                        </LinearLayout>


                    </LinearLayout>


                    <!-- Hobbies como chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:singleLine="true"
                        app:chipSpacingHorizontal="6dp">

                        <com.google.android.material.chip.Chip
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:text="Guitarra"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:text="Yoga"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.Material3.Chip.Suggestion"
                            android:text="Fotografía"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVerPerfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ver perfil"
                            style="@style/Widget.Material3.Button.OutlinedButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConectar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conectar"
                            android:layout_marginStart="8dp"
                            app:icon="@drawable/ic_bolt"
                            app:iconTint="@color/blanco"
                            app:backgroundTint="@color/magenta_claro"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Puedes duplicar esta tarjeta para más perfiles -->
        </LinearLayout>
    </ScrollView>

    <!-- NAV INFERIOR -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#F7F7F7"
        app:itemIconTint="@color/nav_item_selector"
        app:itemTextColor="@color/nav_item_selector"
        app:menu="@menu/menu_main"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
