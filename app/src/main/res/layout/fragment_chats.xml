<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLogoChats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/logo"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvTituloChats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats activos en MyHobbiesApp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/magenta_claro" />

            <TextView
                android:id="@+id/tvSloganChats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chatea con tus amigos que comparten tus hobbies"
                android:textSize="14sp"
                android:textColor="@color/gris_azulado" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvVacioChats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AÃºn no tienes chats activos"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        android:padding="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

